<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="HTML" injector-id="xml">
      <display-name>i/@className</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("className")).withParent(xmlTag().withLocalName(string().equalTo("i")))]]></place>
    </injection>
  </component>
</application>